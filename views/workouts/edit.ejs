<%- include('../partials/header') %>

<h1 class="mb-4">Edit Workout</h1>

<form action="/workouts/<%= workout._id %>?_method=PUT" method="POST" class="row g-3">

    <div class="col-md-6">
        <label for="name" class="form-label">Exercise Name</label>
        <input type="text" id="name" name="name" class="form-control" 
               value="<%= workout.name %>" required>
    </div>

    <div class="col-md-6">
        <label for="muscleGroup" class="form-label">Muscle Group</label>
        <select id="muscleGroup" name="muscleGroup" class="form-select" required>
            <option value="">Select a muscle group</option>
            <option <%= workout.muscleGroup === 'Chest' ? 'selected' : '' %>>Chest</option>
            <option <%= workout.muscleGroup === 'Back' ? 'selected' : '' %>>Back</option>
            <option <%= workout.muscleGroup === 'Legs' ? 'selected' : '' %>>Legs</option>
            <option <%= workout.muscleGroup === 'Shoulders' ? 'selected' : '' %>>Shoulders</option>
            <option <%= workout.muscleGroup === 'Arms' ? 'selected' : '' %>>Arms</option>
            <option <%= workout.muscleGroup === 'Core' ? 'selected' : '' %>>Core</option>
        </select>
    </div>

    <div class="col-md-4">
        <label for="sets" class="form-label">Sets</label>
        <input type="number" id="sets" name="sets" min="1" class="form-control"
               value="<%= workout.sets %>" required>
    </div>

    <div class="col-md-4">
        <label for="reps" class="form-label">Reps</label>
        <input type="number" id="reps" name="reps" min="1" class="form-control"
               value="<%= workout.reps %>" required>
    </div>

    <div class="col-md-4">
        <label for="date" class="form-label">Date</label>
        <input type="date" id="date" name="date" class="form-control"
               value="<%= workout.date.toISOString().slice(0, 10) %>" required>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Update Workout</button>
        <a href="/workouts" class="btn btn-secondary">Cancel</a>
    </div>

</form>

<%- include('../partials/footer') %>