<%- include('../partials/header') %>

<h1 class="mb-4">All Workouts</h1>

<div class="mb-3">
    <a href="/workouts/new" class="btn btn-success">Add New Workout</a>
</div>

<% if (workouts.length === 0) { %>
    <p>No workouts found. Click "Add New Workout" to create one.</p>
<% } else { %>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Exercise</th>
                <th>Muscle Group</th>
                <th>Sets</th>
                <th>Reps</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% workouts.forEach(workout => { %>
                <tr>
                    <td><%= workout.name %></td>
                    <td><%= workout.muscleGroup %></td>
                    <td><%= workout.sets %></td>
                    <td><%= workout.reps %></td>
                    <td><%= workout.date.toISOString().slice(0, 10) %></td>
                    <td>
                        <ul class="list-unstyled mb-0" style="display: flex; gap: 0.5rem;" aria-label="Workout actions">
                            <li>
                                <a href="/workouts/<%= workout._id %>/edit" class="btn btn-sm btn-primary" aria-label="Edit workout">Edit</a>
                            </li>
                            <li>
                                <form action="/workouts/<%= workout._id %>?_method=DELETE" 
                                    method="POST" 
                                    style="display:inline;"
                                    onsubmit="return confirm('Are you sure you want to delete this workout?');"
                                    aria-label="Delete workout form">
                                    <button type="submit" class="btn btn-sm btn-danger" aria-label="Delete workout">Delete</button>
                                </form>
                            </li>
                        </ul>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } %>

<%- include('../partials/footer') %>