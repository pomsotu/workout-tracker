<%- include('../partials/header') %>

<h1 class="mb-4">All Workouts</h1>

<div class="mb-3">
    <a href="/workouts/new" class="btn btn-success">Add New Workout</a>
</div>

<% if (workouts.length === 0) { %>
    <p>No workouts found. Click "Add New Workout" to create one.</p>
<% } else { %>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Exercise</th>
                <th>Muscle Group</th>
                <th>Sets</th>
                <th>Reps</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% workouts.forEach(workout => { %>
                <tr>
                    <td><%= workout.name %></td>
                    <td><%= workout.muscleGroup %></td>
                    <td><%= workout.sets %></td>
                    <td><%= workout.reps %></td>
                    <td><%= workout.date.toISOString().slice(0, 10) %></td>
                    <td>
                        <a href="/workouts/<%= workout._id %>/edit" class="btn btn-sm btn-primary">Edit</a>
                        <form action="/workouts/<%= workout._id %>?_method=DELETE" 
                            method="POST" 
                            style="display:inline;"
                            onsubmit="return confirm('Are you sure you want to delete this workout?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } %>

<%- include('../partials/footer') %>